{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@notification-service/config": ["libs/config/src/index.ts"],
      "@notification-service/core": ["libs/core/src/index.ts"],
      "@notification-service/observability": [
        "libs/observability/src/index.ts"
      ],
      "@notification-service/provider-adapters": [
        "libs/provider-adapters/src/index.ts"
      ],
      "@notification-service/salesforce-integration": [
        "libs/salesforce-integration/src/index.ts"
      ],
      "@notification-service/schema-registry": [
        "libs/schema-registry/src/index.ts"
      ],
      "@notification-service/sdk": ["libs/sdk/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
