# Salesforce Configuration
SALESFORCE_CLIENT_ID=your_connected_app_client_id
SALESFORCE_USERNAME=your_salesforce_username
SALESFORCE_LOGIN_URL=https://test.salesforce.com
SALESFORCE_API_VERSION=v63.0
SALESFORCE_EVENT_OBJECT=tyfonenao__Notification__e

# Private Key Configuration
# Choose one of the following methods by setting SALESFORCE_PRIVATE_KEY_SOURCE

# 1. File Path Method (default)
# SALESFORCE_PRIVATE_KEY_SOURCE=FILE_PATH
# SALESFORCE_PRIVATE_KEY_PATH=/absolute/path/to/your/private_key.pem

# 2. Environment Variable Method
SALESFORCE_PRIVATE_KEY_SOURCE=ENV_VARIABLE
SALESFORCE_PRIVATE_KEY=-----BEGIN PRIVATE KEY-----sdasdasdasda-----END PRIVATE KEY-----

# 3. AWS Secrets Manager Method
# SALESFORCE_PRIVATE_KEY_SOURCE=AWS_SECRET
# SALESFORCE_PRIVATE_KEY_SECRET_NAME=your-secret-name
# AWS_REGION=your-aws-region

